{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "amd",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
